{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
      "dog": {
        "id": "/dog",
        "title": "Dog",
        "description": "A dog record in the website",
        "type": "object",
        "properties": {
          "dogname": {
            "description": "Name of the dog",
            "type": "string"
          },
          "breed": {
            "description": "Breed of dog",
            "type": "string"
          },
          "summary": {
            "description": "Short text summary of dog such as Age and Medical record",
            "type": "string"
          },
          "imageurl": {
            "description": "URL for image of dog",
            "type": "uri"
          },
          "adopted": {
            "description": "Is the dog adopted or not",
            "type": "boolean"
          },
          "locationid": {
            "description": "The place that located",
            "type": "string"
          },
          "writerid": {
            "description": "User ID of the post writer",
            "type": "integer",
            "minimum": 0
          },
          "description": {
            "description": "description of dog in more details",
            "type": "string"  
          }        
        },
        "required": ["dogname", "breed", "writerid"]
      }
    }
  }
  